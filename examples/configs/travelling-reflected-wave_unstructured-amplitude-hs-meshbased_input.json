{
  "general": {
    "params": {
      "input": {
        "file": {
          "name": "travelling-reflected-wave_unstructured-amplitude-hs-meshbased_input.json",
          "dir": "examples/config"
        }
      },
      "output": {
        "file": {
          "name": "travelling-reflected-wave_unstructured-amplitude-hs-meshbased_output.json",
          "dir": "examples/configs"
        }
      }
    },
    "storage": {
      "timestamp": [],
      "dir_out": "scratch",
      "dir_tmp": "/tmp"
    },
    "format": "iomat",
    "parallel": {
      "enabled": true,
      "workers_fraction": 0.8
    }
  },
  "data": {
    "file": {
      "dir": "demo-data",
      "name": "data-travelling-wave-unstructured-y-iomat.mat"
    },
    "slice": {
      "enabled": false,
      "id": 0
    },
    "grid": {
      "type": "unstructured"
    },
    "resolution": {
      "ht": [],
      "hx": [],
      "hy": [],
      "hz": [],
      "units": {
        "space": "mm",
        "time": "ms"
      }
    },
    "modality": "amplitude"
  },
  "interpolation": {
    "enabled": true,
    "file": {
      "exists": false,
      "dir": "",
      "name": "",
      "label": "",
      "keep": true
    },
    "resolution": {
      "ht": [],
      "hx": 10,
      "hy": 10,
      "hz": 10
    },
    "neighbour_method": "",
    "extrapolation_method": "",
    "boundary": {
      "alpha_radius": 30,
      "thickness": 3
    },
    "visualisation": {
      "enabled": true
    }
  },
  "flows": {
    "enabled": true,
    "file": {
      "exists": false,
      "keep": true,
      "dir": "",
      "name": "",
      "label": ""
    },
    "modality": "amplitude",
    "method": {
      "name": "hs3d",
      "implementation": "mesh-based",
      "hs3d": {
        "alpha_smooth": 0.1,
        "max_iterations": 256,
        "initial_conditions": {
          "modality": "random",
          "seed": 42
        },
        "nodal_flows": {
          "enabled": true
        }
      }
    },
    "visualisation": {
      "enabled": true
    },
    "decomposition": {
      "svd": {
        "enabled": true,
        "modes": 1,
        "grid": {
          "type": "unstructured"
        }
      }
    },
    "quantification": {
      "energy": {
        "enabled": true,
        "modality": "nodal"
      }
    }
  },
"streamlines": {
      "enabled": true,
      "file": {
          "exists": false,
          "dir": "",
          "name": "",
          "label": "",
          "keep": true
    },
      "trace_pathlines": false, 
      "tracing": {
               "implementation": "mesh-based", 
               "seeding_points": {
                                  "modality": "random-sparse",
                                  "seed": 42
              },
              "max_stream_length" : 200,
              "step_size": 0.5
          },

    "visualisation": {
      "enabled": true
    }
  },
  "singularity": {
    "enabled": false,
    "file": {
      "keep": false,
      "dir": "",
      "name": "",
      "label": ""
    },
    "detection": {
      "enabled": false,
      "modality": "null-flow-field",
      "threshold": [
        0,
        0.1
      ]
    },
    "classification": {
      "enabled": false
    },
    "quantification": {
      "enabled": false,
      "nodal_occupancy": {
        "enabled": false,
        "distance_threshold": 20
      }
    },
    "visualisation": {
      "enabled": true
    }
  }
}