{
  "general": {
      "params": {
        "input": {
          "file": {
            "name": "travelling-reflected-wave_unstructured-amplitude-hs-meshless_input.json",
            "dir": "examples/configs"
          }
        },
        "output": {
          "file": {
          "name": "travelling-reflected-wave_unstructured-amplitude-hs-meshless_output.json",
          "dir": "examples/configs"
        }
      }
      },
      "storage": {
        "time_stamp": [],
        "dir_out": "scratch",
        "dir_tmp": "/tmp",
        "format": "mat"
      },
    "parallel": {
      "enabled": false,
      "workers_fraction": 0.8
    }
  },
  "interpolation": {
    "enabled": false,
    "file": {
      "exists": false,
      "dir": "",
      "name": "",
      "label": "",
      "keep": true
    },
    "hx": 3,
    "hy": 3,
    "hz": 3,
    "neighbour_method": "",
    "extrapolation_method": "",
    "boundary": {
      "alpha_radius": 30,
      "thickness": 2
    },
    "visualisation": {
      "enabled": true
    }
  },
  "flows": {
    "enabled": true,
    "file": {
      "exists": false,
      "keep": true,
      "dir": "",
      "name": "",
      "label": ""
    },
    "modality": "amplitude",
    "method": {
      "name": "hs3d",
      "implementation": "meshless", 
      "cnem": {
        "convex_hull": "bi"
      },
      "hs3d":{
        "alpha_smooth": 0.1,
        "max_iterations": 4,
        "burnin": {
          "length": 8
        },
        "initial_conditions": {
          "modality": "random",
          "seed": 42
        },
        "nodal_flows": {
          "enabled": false
        }
      }
    },
    "visualisation": {
      "enabled": true
    },
    "decomposition": {
      "svd": {
        "enabled": true,
        "modes": 1,
        "grid": {
          "type": "unstructured"
        }
      }
    },
  "quantification": {
      "energy": {
        "enabled": true,
        "modality": "nodal"
      }
    }
  },
  "streamlines": {
      "enabled": false,
      "file": {
          "exists": false,
          "dir": "",
          "name": "",
          "label": "",
          "keep": true
    },
      "trace_pathlines": false, 
      "tracing": {
               "implementation": "meshless", 
               "seeding_points": {
                                  "modality": "random-sparse",
                                  "seed": 42
              },
              "max_stream_length" : 200,
              "step_size": 0.5
          },

    "visualisation": {
      "enabled": true
    }
  },
  "singularity": {
    "enabled": false,
    "file": {
      "keep": true,
      "dir": "",
      "name": "",
      "label": ""
    },
    "classification": {
      "enabled": false
    },
    "quantification": {
      "enabled": false
    },
    "visualisation": {
      "enabled": false
    }
  },
  "data": {
    "file": {
      "dir": "demo-data",
      "name": "data-travelling-wave-unstructured-y-iomat.mat"
    },
    "slice": {
      "enabled": false,
      "id": 0
    },
    "grid": {
      "type": "unstructured"
    },
    "ht": [],
    "hx": [],
    "hy": [],
    "hz": [],
    "units": {
      "space": "mm",
      "time": "ms"
    },
    "boundary": {
      "alpha_radius" : 30
    },
    "modality": "amplitude"
  }
}