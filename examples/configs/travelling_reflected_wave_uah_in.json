{
  "general": {
    "storage": {
      "time_stamp": [],
      "dir": "scratch",    
      "dir_tmp": "/tmp",    
      "params": {
        "input": {
          "filename": "travelling-reflected-wave_unstructured-aamplitude-hs-meshbased_input.json",
          "dir": "examples/configs" 
        },
        "output": {
          "filename": "travelling-reflected-wave_unstructured-aamplitude-hs-meshbased_output.json",
          "dir": "examples/configs" 
        }
      },
      "format": "iomat"     
    },
    "parallel": {
      "enabled": true,
      "workers_fraction": 0.8
    }
  },
  "interpolation": {
    "enabled": true,
    "file": {
      "exists": false,
      "dir": "",
      "name": "",
      "label": "",
      "keep": true
    },
    "hx": 10,
    "hy": 10,
    "hz": 10,
    "neighbour_method": "",
    "extrapolation_method": "",
    "boundary": {
      "alpha_radius": 30,
      "thickness": 3
    },
    "visualisation": {
      "enabled": true
    }
  },
  "flows": {
    "enabled": true,
    "file": {
      "exists": false,
      "keep": true,
      "dir": "",
      "name": "",
      "label": ""
    },
    "modality": "amplitude",
    "method": {
      "name": "hs3d",
      "hs3d": {
        "alpha_smooth": 0.1,
        "max_iterations": 256,
        "initial_conditions": {
          "mode": "random",
          "seed": 42
        },
        "nodal_flows": {
          "enabled": true
        }
      }
    },
    "visualisation": {
      "enabled": false
    },
    "decomposition": {
      "svd": {
        "enabled": true,
        "modes": 1,
        "grid": {
          "type": "unstructured"
        }
      }
    },
    "quantification": {
      "energy": {
        "enabled": false,
        "modality": "nodal"
      }
    }
  },
  "streamlines": {
      "enabled": false,
      "file": {
          "exists": false,
          "dir": "",
          "name": "",
          "label": "",
          "keep": true
    },

      "tracing": {
               "grid": {
                   "type": "structured"
                  },
               "seeding_points": {
                                  "modality": "random-sparse",
                                  "seed": 42
              },
              "max_stream_length" : 200,
              "time_step": 0.5
          },

    "visualisation": {
      "enabled": false
    }
  },
  "singularity": {
    "enabled": false,
    "file": {
      "keep": true,
      "dir": "",
      "name": "",
      "label": ""
    },
    "detection": {
      "enabled": false,
      "mode": "null-flow-field",
      "threshold": [
        0,
        0.1
      ]
    },
    "classification": {
      "enabled": false
    },
    "quantification": {
      "enabled": false,
      "nodal_occupancy" : {
        "enabled": false,
        "distance_threshold" : 20
      }
    },
    "visualisation": {
      "enabled": false
    }
  },
  "data": {
    "file": {
      "dir": "demo-data", 
      "name": "data-travelling-wave-unstructured-y-iomat.mat"
    },
    "slice": {
      "enabled": false,
      "id": 0
    },
    "grid": {
      "type": "unstructured"
    },
    "ht": [],
    "hx": [],
    "hy": [],
    "hz": [],
    "units": {
      "space": "mm",
      "time": "ms"
    },
    "modality": "amplitude"
  }
}