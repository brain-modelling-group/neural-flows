{
  "general": {
    "params": {
        "input": {
          "file": {
            "name": "",
            "dir":  "" 
          }
          },
        "output": {
          "file": {
            "name": "fmri_waves_u-a-hs-mb_ou_subject_28.json",
            "dir": "examples/configs"} 
        }
      },
    "storage": {
      "time_stamp": [],
      "dir_out": "scratch",    
      "dir_tmp": "/tmp",    
      "format": "iomat"     
    },
    "parallel": {
      "enabled": true,
      "workers_fraction": 0.8
    }
  },
  "interpolation": {
    "enabled": true,
    "file": {
      "exists": false,
      "dir": "",
      "name": "",
      "label": "fmri_interp_subject_28",
      "keep": true
    },
    "resolution": {
      "ht": [],
      "hx": 3,                                     
      "hy": 3,                                     
      "hz": 3                                    
    },
    "neighbour_method": "",
    "extrapolation_method": "",
    "boundary": {
      "alpha_radius": 35,
      "thickness":4
    },
    "visualisation": {
      "enabled": true
    }
  },
  "flows": {
    "enabled": true,
    "file": {
      "exists": false,
      "keep": true,
      "dir": "scratch",
      "name": "",
      "label": "fmri_flows_subject_28"
    },
    "modality": "amplitude",
    "method": {
      "name": "hs3d",
      "implementation": "mesh-based",
      "hs3d": {
        "alpha_smooth": 1.0,
        "max_iterations": 256,
        "initial_conditions": {
          "mode": "random",
          "seed": 42
        },
        "nodal_flows": {
          "enabled": true
        }
      }
    },
    "visualisation": {
      "enabled": true
    },
    "decomposition": {
      "svd": {
        "enabled": true,
        "modes": 12,
        "grid": {
          "type": "unstructured"
        }
      }
    },
    "quantification": {
      "energy": {
        "enabled": true,
        "modality": "nodal"
      }
    }
  },
  "streamlines": {
      "enabled": true,
      "file": {
          "exists": false,
          "dir": "",
          "name": "",
          "label": "fmri_streams_subject_28",
          "keep": true
    },
      "trace_pathlines": true, 
      "tracing": {
               "implementation": "meshless", 
               "seeding_points": {
                                  "modality": "random-sparse",
                                  "seed": 42
              },
              "max_stream_length" : 512,
              "step_size": 0.5
          },

    "visualisation": {
      "enabled": true
    }
  },
  "singularity": {
    "enabled": true,
    "file": {
      "keep": true,
      "dir": "",
      "name": "",
      "label": "fmri_singularity_subject_28"
    },
    "detection": {
      "enabled": true,
      "modality": "null-flow-field",
      "threshold": [
        0,
        0.025
      ]
    },
    "classification": {
      "enabled": true
    },
    "quantification": {
      "enabled": true,
      "nodal_occupancy" : {
        "enabled": true,
        "distance_threshold" : 2
      }
    },
    "visualisation": {
      "enabled": true
    }
  },
  "data": {
    "file": {
      "dir": "demo-data", 
      "name": "fmri_waves_unstructured_single_subject_28_short.mat"
    },
    "slice": {
      "enabled": false,
      "id": 0
    },
    "grid": {
      "type": "unstructured"
    },
    "resolution": {
      "ht": [],
      "hx": [],                                       
      "hy": [],
      "hz": [],
      "units": {
         "space":"mm",                                
          "time": "s"                               
     }
  },
    "modality": "amplitude"
  }
}