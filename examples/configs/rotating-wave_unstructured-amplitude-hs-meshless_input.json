    },
    "resolution": {
      "ht": [],
      "hx": 3,                                     
      "hy": 3,                                     
      "hz": 3                                    
    },
    "neighbour_method": "",
    "extrapolation_method": "",
    "boundary": {
      "alpha_radius": 30,
      "thickness": 2
    },
    "visualisation": {
      "enabled": true
    }
  },
  "flows": {
    "enabled": true,
    "file": {
      "exists": false,
      "keep": true,
      "dir": "",
      "name": "",
      "label": ""
    },
    "modality": "amplitude",
    "method": {
      "name": "hs3d",
      "implementation": "meshless", 
      "cnem": {
        "convex_hull": "bi"
      },
      "hs3d":{
        "alpha_smooth": 0.1,
        "max_iterations": 128,
        "burnin": {
          "length": 8
        },
        "initial_conditions": {
          "mode": "random",
          "seed": 42
        },
        "nodal_flows": {
          "enabled": false
        }
      }
    },
    "visualisation": {
      "enabled": true
    },
    "decomposition": {
      "svd": {
        "enabled": true,
        "modes": 4,
        "grid": {
          "type": "unstructured"
        }
      }
    },
  "quantification": {
      "energy": {
        "enabled": true,
        "modality": "nodal"
      }
    }
  },
  "streamlines": {
      "enabled": false,
      "file": {
          "exists": false,
          "dir": "",
          "name": "",
          "label": "",
          "keep": true
    },

      "tracing": {
               "implementation": "meshless", 
               "seeding_points": {
                                  "modality": "random-sparse",
                                  "seed": 42
              },
              "max_stream_length" : 200,
              "step_size": 0.5
          },

    "visualisation": {
      "enabled": true
    }
  },
  "singularity": {
    "enabled": false,
    "file": {
      "keep": true,
      "dir": "",
      "name": "",
      "label": ""
    },
    "detection": {
      "enabled": false,
      "mode": "null-flow-field",
      "threshold": [
