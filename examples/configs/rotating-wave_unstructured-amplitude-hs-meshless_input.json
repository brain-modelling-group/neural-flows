{
  "general": {
    "params": {
        "input": {
          "file": {
            "name": "",
            "dir":  "" 
          }
          },
        "output": {
          "file": {
            "name": "rotating-wave_unstructured-amplitude-hs-meshless_output.json",
            "dir": "examples/configs"} 
        }
      },
    "storage": {
      "time_stamp": [],
      "dir_out": "scratch",
      "dir_tmp": "/tmp",
      "format": "iomat"
    },
    "parallel": {
      "enabled": false,
      "workers_fraction": 0.8
    }
  },
  "interpolation": {
    "enabled": false,
    "file": {
      "exists": false,
      "dir": "",
      "name": "",
      "label": "",
